.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-cube
        | 筆記
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title == 'Home') ? 'active' : undefined)
          a(href='/main') 主頁
        li(class=(title == 'MyTitle') ? 'active' : undefined)
          a(href='/page/all') 我的筆記
        li(class=(title == 'Sources') ? 'active' : undefined)
          a(href='/sources') 資料來源
        li(class=(title == 'Contact') ? 'active' : undefined)
          a(href='/contact') 聯繫我們
        li
          a(href='/status') 狀態
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') 登入
          li(class=(title == 'Create Account') ? 'active' : undefined)
            a(href='/signup') 註冊
        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              //else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') 帳號
              li.divider
              li
                a(href='/logout') 註銷
